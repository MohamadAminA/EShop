@page
@model EShop.Pages.Admin.UserList

@{
	ViewData["Title"] = "UserList";
}

<h1>UserList</h1>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.User[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.User[0].Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.User[0].Phone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.User[0].Password)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.User[0].Image)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.User[0].IsAdmin)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.User[0].RegisterDate)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.User)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Phone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Password)
				</td>
				<td>
					@if (!string.IsNullOrWhiteSpace(item.Image))
					{
						<img src="/Resources/@(item.Image)" style="height:80px;width:80px" />
					}
					else
					{

						<img src="/Resources/no-profile-image.gif" style="height:50px;width:50px" />
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsAdmin)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RegisterDate)
				</td>
				<td>
					<a asp-page="./Edit" class="btn btn-outline-warning" asp-route-id="@item.Id">Edit</a>
					<a asp-page="./Details" class="btn btn-outline-info" asp-route-id="@item.Id">Details</a>
					<a asp-page="./Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
