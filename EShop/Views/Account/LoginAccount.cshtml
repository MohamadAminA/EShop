@model EShop.Models.ViewModel.LoginViewModel

@{
	ViewData["Title"] = "ورود";
}
<!doctype html>
<html lang="ar" dir="rtl">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Bootstrap CSS -->
	<link rel="stylesheet"
		  href="https://cdn.rtlcss.com/bootstrap/v4.5.3/css/bootstrap.min.css"
		  integrity="sha384-JvExCACAZcHNJEc7156QaHXTnQL3hQBixvj5RV5buE7vgnNEzzskDtx9NQ4p6BJe"
		  crossorigin="anonymous" />

</head>
<body>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
	<script src="https://cdn.rtlcss.com/bootstrap/v4.0.0/js/bootstrap.min.js" integrity="sha384-54+cucJ4QbVb99v8dcttx/0JRx4FHMmhOWi4W+xrXpKcsKQodCBwAvu3xxkZAwsH" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>


	<h1>ورود</h1>
	<hr />
	<div class="row align-items-center justify-content-center">
		<div>
			<div class="card" style="margin:10px">
				<h5 class="card-header alert-primary">ورود </h5>
				<div class="card-body">
					<h5 class="card-title control-label" style="margin-bottom:30px">
						<br />
						لطفا شماره رمز عبور خود را وارد کنید
						<br />
					</h5>
					<form asp-action="LoginAccount">
						<p class="card-text">
							<div style="margin-bottom:10px;">

								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="form-group col-sm-6" aria-hidden="true">
									<input asp-for="PhoneOrEmail" type="hidden" class="form-control" />
								</div>

							</div>
							<div class="form-group col-sm-6">
								<label asp-for="Password" class="control-label"></label>
								<input asp-for="Password" class="form-control" />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="form-group form-check col-sm-6">
								<label class="form-check-label">
									<input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
								</label>
							</div>
							<div class="row">
							<div class="form-group col-lg-5 col-sm-6">
								<input type="submit" value="ورود" class="btn btn-primary btn-block" />
							</div>
								<div class="col-lg-5 col-sm-6">
									<a class="btn btn-outline-dark btn-block" asp-action="Index" asp-controller="Home">بازگشت</a>
								</div>
							</div>
						</p>
					</form>

				</div>
			</div>
		</div>
	</div>

	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
	</body>
	</html>


